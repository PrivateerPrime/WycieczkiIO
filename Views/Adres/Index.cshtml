@model IEnumerable<WycieczkiIO.Models.Adres>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ulica)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Numer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KodPocztowy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Miasto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kraj)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ulica)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Numer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KodPocztowy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Miasto.NazwaMiasta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kraj.NazwaKraju)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AdresId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AdresId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AdresId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
